node {

   environment {
     PATH = "D:/Tools/cygwin64/bin:%PATH%"
   }
  
    stage 'checkout'
     git 'https://github.com/ramanurs/spring-framework-petclinic.git'
    
    stage ('build') {
      def mvn_version = 'M3'
	  bat "echo 'build project...'"
        bat 'mvn clean install'
    }

    stage 'bake image' 
		script {
			pom = readMavenPom file: 'pom.xml'
			//bat "echo Project Version: ${pom.version}"
		}
		bat "echo Project Version1: ${pom.version}"
		withCredentials([usernamePassword(credentialsId: 'ramana_dockerhub', passwordVariable: 'dockerhub_pwd', usernameVariable: 'dockerhub_user')]) {
			bat 'echo "logged in to docker hub, building image.."'			
			bat "docker build -t ramanurs/petclinic1:${pom.version}_${env.BUILD_NUMBER} ." 

			bat 'echo "Build docker image.."'
		stage 'test image' 
			bat "docker run -p 9988:8080 -d --name pet_${pom.version}_${env.BUILD_NUMBER} ramanurs/petclinic1::${pom.version}_${env.BUILD_NUMBER} ."
			git "https://github.com/ramanurs/spring-framework-petclinic.git"
			bat "mvn clean verify"
				   
		stage('Results') {
			 junit '**/target/surefire-reports/TEST-*.xml'
			 archive 'target/*.jar'
			}	
		   
			
			stage 'push image'
			//image.push()
			bat 'docker push ramanurs/petclinic1:${pom.version}_${env.BUILD_NUMBER}'
		}
}
