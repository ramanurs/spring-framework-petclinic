node {

   environment {
     PATH = "D:/Tools/cygwin64/bin:%PATH%"
   }
  
    stage 'checkout'
     git 'https://github.com/ramanurs/spring-framework-petclinic.git'
    
    stage ('build') {
      def mvn_version = 'M3'
	  bat "echo 'build project...'"
      //withEnv( ["PATH+MAVEN=${tool mvn_version}/bin"] ) {
        bat 'mvn clean install'
      //}
    }

    stage('Results - 1') {
         junit '**/target/surefire-reports/TEST-*.xml'
         archive 'target/*.jar'
        }

    stage 'bake image'
    docker.withRegistry('https://registry.hub.docker.com','ramana_dockerhub') {
	    bat 'echo "logged in to docker hub.."'
		
		bat "docker build -t ramanurs/ramana1:1.0 ." 
		
        def image = docker.build("ramanurs/ramana1:1.0",'.')
        bat 'echo "Build docker image.."'
        stage 'test image' 
       
        
        stage 'push image'
        //image.push()
		bat 'docker push ramanurs/ramana1:1.0'
    }
}
